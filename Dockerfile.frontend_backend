FROM node:20-alpine

WORKDIR /app

COPY frontend/package.json frontend/package-lock.json* ./
RUN npm cache clean --force && \
    npm install --prefer-offline --no-audit --no-fund --no-optional && \
    npm rebuild esbuild
COPY frontend/ .

EXPOSE 3000

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
